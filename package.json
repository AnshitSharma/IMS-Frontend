{
  "name": "ims-frontend",
  "version": "1.0.0",
  "description": "IMS Inventory Management System Frontend",
  "main": "index.js",
  "scripts": {
    "dev": "npm run watch:css & npx http-server . -p 3000 -c-1",
    "build:css": "npx tailwindcss -i ./assets/css/globals.css -o ./assets/css/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./assets/css/globals.css -o ./assets/css/tailwind.css --watch",
    "build": "npm run build:css",
    "start": "npm run dev"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "tailwindcss": "^3.3.6",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}